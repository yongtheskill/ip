<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
            prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" 
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainWindow">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="400.0" AnchorPane.bottomAnchor="0.0" 
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER" 
                           prefHeight="550.0" prefWidth="400.0" vbarPolicy="ALWAYS" 
                           styleClass="scroll-pane" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox fx:id="dialogContainer" prefHeight="548.0" prefWidth="388.0" 
                              styleClass="dialog-container">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </VBox>
                    </content>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </ScrollPane>
                <AnchorPane prefHeight="50.0" prefWidth="400.0" styleClass="input-area">
                    <children>
                        <TextField fx:id="userInput" onAction="#handleUserInput" 
                                  prefHeight="40.0" promptText="Type your command here..." 
                                  styleClass="text-field" AnchorPane.bottomAnchor="5.0" 
                                  AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="70.0" 
                                  AnchorPane.topAnchor="5.0" />
                        <Button fx:id="sendButton" mnemonicParsing="false" onAction="#handleUserInput" 
                               prefHeight="40.0" prefWidth="50.0" text="Send" 
                               styleClass="send-button" AnchorPane.bottomAnchor="5.0" 
                               AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="5.0" />
                    </children>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </AnchorPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
